<h1 class="text-center my-4">Add a Review for <%= @restaurant.name %></h1>

<div class="container">
  <%= form_with(model: [@restaurant, @review], local: true, html: { class: 'form' }) do |form| %>
    <div class="form-group">
      <%= form.label :rating, 'Rating' %>
      <%= form.number_field :rating, in: 1..5, step: 1, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :content, 'Content' %>
      <%= form.text_area :content, rows: 5, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.submit 'Submit Review', class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>
</div>
