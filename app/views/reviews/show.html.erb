<div class="container">
  <h1 class="text-center my-4"><%= @restaurant.name %></h1>

  <div class="card mb-4">
    <div class="card-header">
      <h2>Restaurant Details</h2>
    </div>
    <div class="card-body">
      <p><strong>Address:</strong> <%= @restaurant.address %></p>
      <p><strong>Category:</strong> <%= @restaurant.category %></p>
      <p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h2>Reviews</h2>
    </div>
    <div class="card-body">
      <% if @restaurant.reviews.any? %>
        <% @restaurant.reviews.each do |review| %>
          <div class="review mb-3">
            <p><strong>Rating:</strong> <%= review.rating %> / 5</p>
            <p><strong>Comment:</strong> <%= review.content %></p>
            <hr>
          </div>
        <% end %>
      <% else %>
        <p>No reviews yet. Be the first to leave a review!</p>
      <% end %>
    </div>
  </div>

  <div class="text-center">
    <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  </div>
</div>
