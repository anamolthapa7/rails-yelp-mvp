<h1 class="text-center my-4">Reviews for <%= @restaurant.name %></h1>

<div class="container mb-4">
  <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary' %>
</div>

<div class="container">
  <div class="row mb-4">
    <div class="col">
      <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
    </div>
  </div>

  <% @reviews.each do |review| %>
    <div class="row mb-4">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Rating: <%= review.rating %>/5</h5>
            <p class="card-text"><%= review.content %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
