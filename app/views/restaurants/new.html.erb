<h1 class="text-center my-4">Add a New Restaurant</h1>

<div class="container">
  <%= form_with model: @restaurant, local: true, class: 'form' do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter restaurant name' %>
    </div>

    <div class="form-group">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-control', placeholder: 'Enter restaurant address' %>
    </div>

    <div class="form-group">
      <%= form.label :category, class: 'form-label' %>
      <%= form.select :category, Restaurant::CATEGORIES, { prompt: 'Select Category' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :image_url, class: 'form-label' %>
      <%= form.text_field :image_url, class: 'form-control', placeholder: 'Enter image URL (optional)' %>
    </div>

    <div class="form-group text-center">
      <%= form.submit 'Create Restaurant', class: 'btn btn-primary btn-lg mt-3' %>
    </div>
  <% end %>
</div>
